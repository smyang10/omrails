<div class="container">
	<!--<p id="notice"><%= notice %></p>-->

	<div class="container container-cards margin-top-2">
		<p class="firebrick-text">
		  <strong>Name:</strong>
		  <%= @deck.title %>
		</p>

		<p class="firebrick-text">
		  <strong>By:</strong>
		  <%= @deck.user.username %>
		</p>

		<p class="firebrick-text">
		  <strong>Cards:</strong>
		  <%= @deck.cards %>
		</p>

	</div>

	<% if @deck.user == current_user %>
		<%= link_to 'Edit', edit_deck_path(@deck) %> |
	<% end %>
	<%= link_to 'Back', decks_path %>

</div>
