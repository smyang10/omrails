<div class="container">
	<div class="row">
		<div class="offset-md-2 col-md-8">
			<p id="notice"><%= notice %></p>

			<div class="card card-block card-tweet ">
			  <h4 class="card-title"><%= @tweet.user.email %></h4>
			  <p class="card-text"><%= @tweet.content %></p>
			  <% if @tweet.user == current_user %>
					<%= link_to 'Edit', edit_tweet_path(@tweet), class: "card-link" %>
				<% end %>
			  <%= link_to 'Back', tweets_path, class: "card-link" %>
			</div>

			
			

		</div>

	</div>

</div>