<div class="container">
	<p id="notice"><%= notice %></p>

	<p>
	  <strong>User:</strong>
	  <%= @item.user.email %>
	</p>

	<p>
	  <strong>Title:</strong>
	  <%= @item.title %>
	</p>

	<p>
	  <strong>Url:</strong>
	  <%= @item.url %>
	</p>

	<p>
	  <strong>Text:</strong>
	  <%= @item.text %>
	</p>

	<% if @item.user == current_user %>
		<%= link_to 'Edit', edit_item_path(@item) %> |
	<% end %>
	<%= link_to 'Back', items_path %>
</div>